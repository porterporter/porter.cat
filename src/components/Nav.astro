---
import clsx from 'clsx';

interface Props {
	class?: string;
}
const path = Astro.url.pathname;
---

<nav
	class={clsx(
		Astro.props.class,
		'flex flex-col gap-4 md:border-r border-gray-300 md:pr-4 pb-4 md:pb-0 h-max md:mr-4 mb-4 md:mb-0 border-b md:border-b-0 border-r-0'
	)}
>
	{
		path === '/' ? (
			'porter milton'
		) : (
			<a
				class="visited:red visited:italic hover:bg-foreground hover:text-background transition-colors duration-250 w-max"
				href="/"
			>
				porter milton
			</a>
		)
	}
	<a
		class="visited:italic hover:bg-foreground hover:text-background transition-colors duration-250 w-max"
		href="/writing"
	>
		writing
	</a>
	<a
		class="visited:italic hover:bg-foreground hover:text-background transition-colors duration-250 w-max"
		href="/work"
	>
		work
	</a>
	<a
		class="visited:italic hover:bg-foreground hover:text-background transition-colors duration-250 w-max"
		target="_blank"
		rel="noopener noreferrer"
		href="https://github.com/porterporter"
	>
		github
	</a>
	<a
		class="visited:italic hover:bg-foreground hover:text-background transition-colors duration-250 w-max"
		target="_blank"
		rel="noopener noreferrer"
		href="https://last.fm/user/portermilton"
	>
		last.fm
	</a>
</nav>
